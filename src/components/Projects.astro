---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/Nextjs.astro"
import TailwindCSS from "./icons/TailwindCSS.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Python from "./icons/Python.astro"
import React from "./icons/React.astro"
import TypeScript from "./icons/TS.astro"
import HTML from "./icons/HTML.astro"
import JS from "./icons/JS.astro"
import CSS3 from "./icons/CSS.astro"


export interface Props {
  tag: string;
}

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: TailwindCSS,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#ffde57]/90 text-[#4584b6]",
    icon: Python,
  },
  REACT: {
    name: "React",
    class: "bg-[#6495ed] text-white",
    icon: React,
  },
  TS: {
    name: "TypeScript",
    class: "bg-[#007acc] text-white",
    icon: TypeScript,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#e34c26] text-white",
    icon: HTML,
  },
  JS: {
    name: "JavaScript",
    class: "bg-[#ffde57]/60 text-white",
    icon: JS,
  },
  CSS3: {
    name: "CSS",
    class: "bg-[#2965f1] text-white",
    icon: CSS3,
  },
}
const PROJECTS = [
  {
    title: "Real Estate Landing Page",
    description:
      "Responsive and interactive landing page built for showcasing real estate properties, integrating smooth animations, interactive maps, and modern UI elements.",
    link: "https://landing-page-bautitobal.netlify.app/",
    github: "https://github.com/bautitobal/landing-page",
    image: "/projects/landing-page.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.REACT, TAGS.TS],
  },
  {
    title: "Contact Form Component",
    description:
      "A simple form component for a static website.",
    github: "https://github.com/bautitobal/contactame-form",
    image: "/projects/contact-comp.webp",
    tags: [TAGS.HTML, TAGS.CSS3, TAGS.JS],
  },
  {
    title: "Temperature Converter",
    description:
      "Temperature converter between Celcius and Fahrenheit made on Python. Easy to use and now available as an executable file!",
    github: "https://github.com/bautitobal/temperature-converter",
    image: "/projects/temperature-converter.webp",
    tags: [TAGS.PYTHON],
  },
  {
    title: "CV-styled portfolio",
    description:
      "Soon!",
    tags: [],
  },
  
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>